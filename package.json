{
  "name": "shortlink",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:api\"",
    "dev:tunnel": "concurrently \"pnpm dev\" \"tsx scripts/dev-with-tunnel.ts\"",
    "dev:frontend": "vite",
    "dev:api": "vercel dev --listen 3001",
    "build": "vite build",
    "preview": "vite preview",
    "test:bot": "tsx scripts/test-bot.ts",
    "test:bot:node": "node --loader ts-node/esm scripts/test-bot.ts",
    "webhook:set": "node scripts/set-webhook-production.js",
    "bot:commands": "tsx scripts/set-bot-commands.ts",
    "lint": "eslint . --ext .ts,.tsx,.vue --max-warnings=0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.2",
    "@vueuse/core": "^14.1.0",
    "axios": "^1.7.9",
    "chart.js": "^4.5.1",
    "telegraf": "^4.16.3",
    "vue": "^3.5.11",
    "vue-chartjs": "^5.3.3",
    "vue-router": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vercel/node": "^3.2.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.31.0",
    "pg": "^8.17.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3",
    "vercel": "^39.3.0",
    "vite": "^5.4.10"
  }
}
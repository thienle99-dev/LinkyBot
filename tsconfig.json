{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "@vercel/node"
    ]
  },
  "include": [
    "src/**/*",
    "api/**/*",
    "lib/**/*",
    "env.d.ts"
  ]
}